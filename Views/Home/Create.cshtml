@model PhotoManager.PhotoViewModel
@{

    ViewBag.PageTitle = "Add Photo";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="PhotoLead" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PhotoLead" class="form-control" placeholder="PhtoLead" />
            <span asp-validation-for="PhotoLead" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">

        <label asp-for="Story" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Story" class="form-control" placeholder="Story" />
            <span asp-validation-for="Story" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Location"></label>
        <div class="col-sm-10">
            <select asp-for="Location" asp-items="Html.GetEnumSelectList(typeof(Location))" class="custom-select mr-sm-2">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Location"></span>
        </div>
    </div>
     <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Photo"></label>
        <div >
             <input asp-for="Photo"  />
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <button class="btn btn-primary" type="submit">Create</button>
    </div>

</form> 